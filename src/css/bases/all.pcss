/* ITCSS: Base */
/* Unclassed HTML elements(type selectors). */

@font-face {
  font-family: "NotoSansCJKjp-Jxck";
  font-style: normal;
  font-weight: 300;
  src: resolve("../font/NotoSansCJKjp-Jxck-Light.woff2") format("woff2"), resolve("../font/NotoSansCJKjp-Jxck-Light.woff") format("woff"), resolve("../font/NotoSansCJKjp-Jxck-Light.ttf") format("truetype");
}

@font-face {
  font-family: "NotoSansCJKjp-Jxck";
  font-style: normal;
  font-weight: 400;
  src: resolve("../font/NotoSansCJKjp-Jxck-Regular.woff2") format("woff2"), resolve("../font/NotoSansCJKjp-Jxck-Regular.woff") format("woff"), resolve("../font/NotoSansCJKjp-Jxck-Regular.ttf") format("truetype");
}

@font-face {
  font-family: "NotoSansCJKjp-Jxck";
  font-style: normal;
  font-weight: 700;
  src: resolve("../font/NotoSansCJKjp-Jxck-Bold.woff2") format("woff2"), resolve("../font/NotoSansCJKjp-Jxck-Bold.woff") format("woff"), resolve("../font/NotoSansCJKjp-Jxck-Bold.ttf") format("truetype");
}

html,
body {
  @apply --text-break;
  height: 100%;
  overflow-y: hidden;
  -ms-overflow-style: -ms-autohiding-scrollbar;
}

body {
  position: relative;
  min-width: 375px;
  font-family: "Noto Sans", "Noto Sans CJK JP", "NotoSansCJKjp-Jxck", sans-serif;
  font-size: 12px;
  font-weight: lighter;
  line-height: 1.5;
  color: var(--color-base-mineShaft);
  background-color: var(--color-base-concrete);
}
