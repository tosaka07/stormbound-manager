form {
  margin: 0;
}

input,
button,
textarea,
select {
  padding: 0;
  margin: 0;
  font-family: "Noto Sans", "Noto Sans CJK JP", "NotoSansCJKjp-Jxck", sans-serif;
  line-height: normal;
  background: none;
  border: none;
  border-radius: 0;
  outline: none;
  appearance: none;
}

/* Chromeのautofill機能で背景色がyellowに設定される問題への対応 */
@keyframes autofill {
  to {
    background: transparent;
  }
}

input:-webkit-autofill {
  animation-name: autofill;
  animation-fill-mode: both;
}
